<h3> Hello, <%= @user.username %> </h3>

<p>Add a new dream <a href='/dreams/new'>here</a></p>

<h2>Dreams</h2>

<ul>
<% Dream.all.sort_by {|obj| obj.date}.each do |dream| %>
    <li> <a href='/dreams/<%=dream.id%>'> <%= dream.date.strftime("%b %d, %Y") %> </a>: <%= dream.story %> <p>--Author: <a href='/users/<%=dream.user.slug%>'><%= dream.user.username %></a></p></li>
    <br>
<% end %>
</ul>
<p><a href='/logout'>Log Out</a></p>
